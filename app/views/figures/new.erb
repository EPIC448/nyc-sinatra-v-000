
<form  action="/figures" method="POST">

  <h3>Name <input type="text" name="figure[name]" id="figure_name"></h3>

  <h2>Titles</h2>

  <%@titles.each do |title|%>
    <!-- we give check box ids so when checked, it can be tracked -->

    <ul><%=title.name%>
    <input type="checkbox" id="<%=title.name%>" name="figure[title_ids][]" value="<%=title.id%>">
    </input>
    </ul>
    <%end%>


 <h2> LandMark</h2>
    <%@landmarks.each do |landmark|%>
    <ul><%=landmark.name%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.name%>">
     </input>
     </ul>
     <%end%>

  <h3>Create New Landmark</h3>
   <h3>Name: <input type="text" name="landmark[name]"> Year: <input type="text" name="">
    </h3>
    <input type="submit" value="create New Figure">

</form>

