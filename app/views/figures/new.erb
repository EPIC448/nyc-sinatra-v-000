
<form  action="/figures" method="POST">

  <h3>Name <input type="text" name="figure[name]" id="figure_name"></h3>

  <h2>Titles</h2>

  <h3>Create New Title</h3>
   <h3>Name Title: <input type="text" name="title[name]" id="new_title"> </h3>

  <%@titles.each do |title|%>
    <!-- we give check box ids so when checked, it can be tracked -->

    <ul><%=title.name%>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>">
    </input>
    </ul>
    <%end%>




 <h2> LandMark</h2>
    <%@landmarks.each do |landmark|%>
    <ul><%=landmark.name%>
    <input type="checkbox" id="landmark_<%=landmark.id%>"name="figure[landmark_ids][]" value="<%=landmark.id%>">
     </input>
     </ul>
     <%end%>

  <h3>Create New Landmark</h3>
   <h3>Name: <input type="text" name="landmark[name]" id="new_landmark"></h3>

    <input type="submit" value="Create New Figure">

</form>

